{
  "name": "arcad-ai-assistant",
  "displayName": "ARCAD AI Assistant",
  "description": "An AI assistant for ARCAD products.",
  "publisher": "arcad-software",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.82.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-repo/arcad-ai-assistant.git"
  },
  "categories": [
    "Other",
    "Chat",
    "AI"
  ],
  "activationEvents": [
    "onView:arcad-ai-assistant.chatView"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "arcad-ai-assistant-sidebar",
          "title": "ARCAD AI",
          "icon": "media/robot.svg"
        }
      ]
    },
    "views": {
      "arcad-ai-assistant-sidebar": [
        {
          "id": "arcad-ai-assistant.chatView",
          "name": "Chat",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "arcad-ai-assistant.newChat",
        "title": "New Chat",
        "icon": "$(clear-all)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "arcad-ai-assistant.newChat",
          "when": "view == arcad-ai-assistant.chatView"
        }
      ]
    },
    "configuration": {
      "title": "ARCAD AI Assistant",
      "properties": {
        "arcad-ai-assistant.gemini.apiKey": {
          "type": "string",
          "description": "Your API Key for Google Gemini. This is stored securely.",
          "default": "",
          "format": "password"
        },
        "arcad-ai-assistant.gemini.modelName": {
          "type": "string",
          "description": "The Gemini model to use (e.g., 'gemini-1.5-flash-latest', 'gemini-pro').",
          "default": "gemini-1.5-flash-latest"
        },
        "arcad-ai-assistant.product.contextUrl": {
          "type": "string",
          "description": "The default URL to use for context if a specific product isn't selected.",
          "default": "https://www.arcadsoftware.com/arcad/products/"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@google/generative-ai": "^0.14.1",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.x",
    "@types/vscode": "^1.82.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "@vscode/test-electron": "^2.3.4",
    "axios": "^1.12.2",
    "cheerio": "^1.1.0",
    "eslint": "^8.47.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.4",
    "typescript": "^5.1.6",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  }
}
